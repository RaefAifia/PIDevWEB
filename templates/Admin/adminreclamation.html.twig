{% extends 'baseBack.html.twig' %}


{% block body %}
	<section class="banner_part">
		<div class="main">
			<!-- MAIN CONTENT -->
			<div class="main-content" >
				<div class="container-fluid">

				<div class="row" >
				<div class="col-lg-9 col-xl-9">
					<div class="banner_text">
						<div class="banner_text_iner">


							<h1>Reclamation</h1>

							<table class="table">
								<tbody>

								<tr>
									<th>Nom de r√©clamation</th>
									<td>{{ reclamation.reclamationNom }}</td>
								</tr>
								<tr>
									<th>Description</th>
									<td>{{ reclamation.description }}</td>
								</tr>
								<tr>
									<th>Date</th>
									<td>{{ reclamation.date ? reclamation.date|date('Y-m-d') : '' }}</td>
								</tr>

								<tr>
									<th>Concernant</th>
									<td>{{ reclamation.x }}</td><td>{{ reclamation.concernant }}</td>
								</tr>

								</tbody>
							</table>


						</br>
							<form method="post" action="{{ path('admin_reclamation_avert' , {'reclamationId': reclamation.reclamationId})}}" onsubmit="return confirm('Are you sure you want to send a warning this item?');">
								<input type="hidden" name="_token" value="{{ csrf_token('Avertissement' ~ reclamation.reclamationId) }}">
								<button class="btn" style="float:right">Avertissement</button>
							</form>





							{{ include('reclamation/_delete_form.html.twig') }}
							<a href="{{ path('admin_reclamation') }}">back to list</a>
						</div>
					</div>
				</div>
			</div>
		</div>
			</div>
		</div>
	</section>
{% endblock %}