{% extends 'BlogBack.html.twig' %}



{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ blog.titre }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ blog.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ blog.description }}</td>
            </tr>
        </tbody>
    </table>
    <center>
        <button style="margin-top:10px" class="btn btn-outline-success"><a href="{{ path('blog_edit', {'blogId': blog.blogId}) }}">Modifier</a></button>
        <button style="margin-top:10px" class="btn btn-outline-primary"><a href="{{ path('blog_index') }}">Retour</a></button>



    {{ include('blog/_delete_form.html.twig') }}
    </center>
{% endblock %}
