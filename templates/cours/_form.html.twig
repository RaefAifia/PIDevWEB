    <tr><td> Description :</td>  <td > {{ form_widget(form.description, {'attr': {'class': 'td'}}) }} {{ form_errors(form.description) }}</td></tr>

    <tr><td> Document :</td>  <td>{{ form_widget(form.image) }}{{ form_errors(form.image,{ 'attr': { 'placeholder' : 'télécharger vos documents' }}) }}</td></tr>



   <td> <button  class="btn_4">{{ button_label|default('Enregistrer') }}</button></td>
