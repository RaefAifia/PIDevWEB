{% form_theme form 'bootstrap_4_layout.html.twig' %}
<table class="table  table-striped">
    <tr><td> Titre : </td> <td>{{ form_widget(form.titre , { 'attr': { 'maxlength' : 100 } }) }}{{ form_errors(form.titre) }}</td></tr>


