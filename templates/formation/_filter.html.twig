{{ form_start(form) }}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
<aside class="single_sidebar_widget post_category_widget">
    <h4 class="widget_title">Recherche</h4>
    <ul class="list cat-list">
         {{ form_row(form.q) }}

        <h4>Domaine</h4>
        {{ form_row(form.domaine) }}

        <h4>Niveau</h4>
        {{ form_row(form.niveau) }}
        <h4>Prix</h4>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.min) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.max) }}
            </div>

        </div>

<div class="slider-price d-flex align-items-center my-4">
    <span class="font-weight-normal small text-muted mr-2">DT0</span>
    <form class="multi-range-field w-100">
        <input id="multi" class="multi-range" type="range" />
    </form>
    <span class="font-weight-normal small text-muted ml-2">$100</span>
</div>

        <h2></h2>
        <button type="submit" class="btn btn-primary w-100">Filtrer</button>

        {{ form_end(form) }}