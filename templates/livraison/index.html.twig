{% extends 'panier.html.twig' %}


{% block body %}

<div class="section_padding">
    <div class="section-top-border">
       <center><h3 class="mb-30">Mes Livraisons</h3></center>
        <center><div class="progress-table-wrap">
            <div class="progress-table">
                <div class="table-head">
                    <div class="serial">Livraison ID</div>
                    <div class="serial">Commande ID</div>
                    <div class="serial">User ID</div>
                    <div class="serial">Destination</div>
                    <div class="serial">Num Tel</div>
                    <div class="serial">Etat</div>
                </div>
                {% for livraison in livraisons %}
                    <div class="table-row">
                        <div style="position: relative; left: 5%" class="serial" >{{ livraison.livraisonId }}</div>
                        <div style="position: relative; left: 5%" class="serial" >{{ livraison.commande.commandeId }}</div>
                        <div style="position: relative; left: 5%" class="serial">{{ livraison.user.userId }}</div>
                        <div style="position: relative; left: 2%" class="serial">{{ livraison.adresse }}</div>
                        <div style="position: relative; left: 3%" class="serial">{{ livraison.numTel }}</div>
                        <div style="position: relative; left: 6%" class="percentage">
                            <div class="progress">
                                <div class="progress-bar color-5" role="progressbar" style="width: 10%" aria-valuenow="10" aria-valuemin="10"
                                     aria-valuemax="10"></div>
                            </div>
                            {{ include('livraison/_delete_form.html.twig') }}
                            <a style="position: relative;right:50%"class="btn btn-outline-primary" href="{{ path('livraison_edit', {'livraisonId': livraison.livraisonId}) }}"> Modifier</a>
                        </div>
                    </div>
                {% else %}
                    <p style="font-size: 30px;color: red">Pas de Livraisons</p>
                {% endfor %}
</div>
        </div></center>
    </div>
    </div>
{% endblock %}