{% extends 'base.html.twig' %}

{% block title %}
    <title> liste des oeuvres  </title>
{% endblock %}
 {% block content %}
     <section class="breadcrumb breadcrumb_bg">
         <div class="container">
             <div class="row">
                 <div class="col-lg-12">
                     <div class="breadcrumb_iner text-center">
                         <div class="breadcrumb_iner_item">
                             <h2>liste des oeuvres</h2>

                         </div>
                     </div>
                 </div>
             </div>
         </div>
     </section>
     <!-- breadcrumb start-->
 {% endblock %}




{% block body %}

<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-5">
                <div class="section_tittle text-center">

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    {{ include('oeuvrage/filtre.html.twig')  }}
                </div>
            </div>

            <div class="col-lg-8 mb-5 mb-lg-0">

                <section class="special_cource padding_top">
                    <div class="container">
                        <div class="row">
                            {% for oeuvrage in oeuvrages %}

                            <div class=" col-lg-4 col-sm-6">
                                <div class="single_special_cource">

                                    <a href="{{ path('oeuvrage_show', {'oeuvrageId': oeuvrage.oeuvrageId}) }}"> <img src="\PI\IMG\{{ oeuvrage.image }}" class="special_img" alt="" style=" height:150px" >
                                    </a>
                                    <div class="special_cource_text">
                                        <a >
                                        <h4>{{oeuvrage.prix}} DT</h4>
                                        </a>
                                        <a href="{{ path('oeuvrage_show', {'oeuvrageId': oeuvrage.oeuvrageId}) }}"  >
                                            <h3> {{ oeuvrage.nom }}</h3>
                                        </a>
                                        <p>{{ oeuvrage.description |raw }}</p>
                                        {% if oeuvrage.quantite==0 %}
                                            <span class="label-danger ">hors stock</span>
                                        {% else %}
                                            <span style="font-size: 18px; font-style: italic;  color: #ac3e3e;"> {{ oeuvrage.quantite }} oeuvres </span>
                                        {% endif %}


                                        <div class="author_info">
                                            <div class="author_img" >
                                                  <a href="#" class="btn_4" >Ajouter au panier</a>

                                            </div>

                                        </div>
                                    </div>

                                </div>
                            </div>

                            {% endfor %}

                        </div>
                    </div>
                </section>
                </div>


        </div>
    </div>

</section>


{% endblock %}
