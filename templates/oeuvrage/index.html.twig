{% extends 'base.html.twig' %}

{% block title %}
    <title> liste des oeuvres  </title>
{% endblock %}
 {% block content %}
     <section class="breadcrumb breadcrumb_bg">
         <div class="container">
             <div class="row">
                 <div class="col-lg-12">
                     <div class="breadcrumb_iner text-center">
                         <div class="breadcrumb_iner_item">
                             <h2>liste des oeuvres</h2>

                         </div>
                     </div>
                 </div>
             </div>
         </div>
     </section>
     <!-- breadcrumb start-->
 {% endblock %}




{% block body %}

<section>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-5">
                <div class="section_tittle text-center">

                </div>
            </div>
        </div>
        <div class="row">
            {% for oeuvrage in oeuvrages %}

            <div class="col-sm-6 col-lg-4" align-self-center>
                <div class="single_special_cource">

                    <img src="\PI\IMG\{{ oeuvrage.image }}" class="img-fluid" alt="" style="width: 50%; height:auto">

                    <div class="special_cource_text">
                    <a href="course-details.html">
                            <h3> {{ oeuvrage.nom }}</h3>
                        </a>
                        <p>{{ oeuvrage.description  }}</p>
                        <h4>{{ oeuvrage.prix }} DT </h4>
                        {% if oeuvrage.quantite==0 %}
                            <span class="label-danger ">hors stock</span>
                        {% else %}
                        <h4> {{ oeuvrage.quantite }} oeuvres </h4>
                        {% endif %}

                        <div class="author_info">
                            <div class="author_img">
                                <a href="{{ path('oeuvrage_show', {'oeuvrageId': oeuvrage.oeuvrageId}) }}" class="btn_4" >{{ button_label|default('afficher') }} </a>

                                <a href="#" class="btn_4" >Ajouter au panier</a>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
            {% endfor %}

        </div>
    </div>

</section>


{% endblock %}
