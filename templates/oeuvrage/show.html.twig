{% extends 'base.html.twig' %}

{% block title %}
    <title> détail d'un oeuvre </title>
{% endblock %}

 {% block content %}
     <section class="breadcrumb breadcrumb_bg">
         <div class="container">
             <div class="row">
                 <div class="col-lg-12">
                     <div class="breadcrumb_iner text-center">
                         <div class="breadcrumb_iner_item">
                             <h2>Détail d'oeuvre </h2>

                         </div>
                     </div>
                 </div>
             </div>
         </div>
     </section>
     <!-- breadcrumb start-->
 {% endblock %}

{% block body %}
    <section >
<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-5">
            <div class="section_tittle text-center"  >

                 {%  if favoris==null   %}
                    <a method="post" href="{{ path('oeuvrage_favoris', {'oeuvrageId': oeuvrage.oeuvrageId}) }}" id='heart' class='buttonheart' ></a>

                {% else %}
               <a method="post" href="{{ path('oeuvrage_favoris', {'oeuvrageId': oeuvrage.oeuvrageId}) }}" id='heart' class='buttonheart' ></a>
                    <style>
                        .buttonheart{
                            width: 30px;
                            height: 10px;
                            top:50%;
                            position: absolute;
                            left: 150%;
                            border-radius: 5px;
                            cursor: pointer;
                            transition: background 0.5s ease;
                        }
                        .buttonheart:hover{

                        }
                        .activate#heart:before,.activate#heart:after{
                            background: dimgrey !important;
                        }
                        #heart {
                            width: 22px;
                            height: 20px;
                            transition: background 0.5s ease;
                        }

                        #heart:before,
                        #heart:after {
                            transition: background 0.5s ease;
                            position: absolute;
                            content: "";
                            left: 50px;
                            top: 0;
                            background: #863535;
                            width: 50px;
                            height: 80px;
                            border-radius: 50px 50px 0 0;
                            transform: rotate(-45deg);
                            transform-origin: 0 100%;
                        }
                        #heart:after {
                            left: 0;
                            transform: rotate(45deg);
                            transform-origin :100% 100%;
                        }
                    </style>
                  {% endif %}
            </div>

        </div>

    </div>

    <div class="row">
        <div class="col-sm-6 col-lg-4" >

         <img src="\PI\IMG\{{ oeuvrage.image }}" class="special_img" alt="" style="width: 100%; height:auto">

        </div>



                 <div class="col-lg-6 col-xl-6">

                     <div class="banner_text">

                         <div class="banner_text_iner">


                             <table class="table">
                                 <tbody>

                                 <tr>
                                     <th>Nom</th>
                                     <td>{{ oeuvrage.nom }}</td>
                                 </tr>
                                 <tr>
                                     <th>Domaine</th>
                                     <td>{{ oeuvrage.domaine }}</td>
                                 </tr>
                                 <tr>
                                     <th>Prix</th>
                                     <td>{{ oeuvrage.prix }} DT</td>
                                 </tr>
                                 <tr>
                                     <th>Quantite</th>
                                     {% if oeuvrage.quantite ==0  %}
                                         <td STYLE="color: #8f1f00">hors stock</td>
                                     {%  else %}
                                     <td>{{ oeuvrage.quantite }} oeuvres</td>
                                     {% endif %}
                                 </tr>
                                 <tr>
                                     <th>Description</th>
                                     <td>{{ oeuvrage.description |raw }}</td>
                                 </tr>


                                 </tbody>
                             </table>

                             <a href="{{ path('oeuvrage_index') }}" class="btn_1">Revenir à la liste</a>

                             <a href="{{ path('oeuvrage_edit', {'oeuvrageId': oeuvrage.oeuvrageId}) }}" class="btn_2">Ajouter au panier</a>

                         </div>

                     </div>


         </div>





         </div>
</div>

     </section>

 {% endblock %}

