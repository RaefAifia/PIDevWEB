                 {%  if favoris==null   %}
                    <a method="post" href="{{ path('oeuvrage_favoris', {'oeuvrageId': oeuvrage.oeuvrageId}) }}" id='heart' class='buttonheart' ></a>

                {% else %}
               <a method="post" href="{{ path('oeuvrage_favoris', {'oeuvrageId': oeuvrage.oeuvrageId}) }}" id='heart' class='buttonheart' ></a>
                    <style>
                        .buttonheart{
                            width: 30px;
                            height: 10px;
                            top:50%;
                            position: absolute;
                            left: 150%;
                            border-radius: 5px;
                            cursor: pointer;
                            transition: background 0.5s ease;
                        }
                        .buttonheart:hover{

                        }
                        .activate#heart:before,.activate#heart:after{
                            background: dimgrey !important;
                        }
                        #heart {
                            width: 22px;
                            height: 20px;
                            transition: background 0.5s ease;
                        }

                        #heart:before,
                        #heart:after {
                            transition: background 0.5s ease;
                            position: absolute;
                            content: "";
                            left: 50px;
                            top: 0;
                            background: #863535;
                            width: 50px;
                            height: 80px;
                            border-radius: 50px 50px 0 0;
                            transform: rotate(-45deg);
                            transform-origin: 0 100%;
                        }
                        #heart:after {
                            left: 0;
                            transform: rotate(45deg);
                            transform-origin :100% 100%;
                        }
                    </style>
                  {% endif %}
            </div>

        </div>

    </div>

    <div class="row">
