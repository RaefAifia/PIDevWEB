{% extends 'baseBack.html.twig' %}

{% block title %}
    <title> liste des Offres </title>
{% endblock %}

 {% block body %}
     <div class="main">
         <!-- MAIN CONTENT -->
         <div class="main-content">
             <div class="container-fluid">
                 <!-- OVERVIEW -->
                 <div class="panel panel-headline">
                     <div class="panel-heading">
                         <h3 class="panel-title">Liste des offres</h3>
                         <p class="panel-subtitle"></p>
                     </div>
                     <!-- changer lllllllllll -->


                     <table class="table">
                         <thead>
                         <tr>

                             <th>Nom</th>
                             <th>Description</th>
                             <th>Nombre des profiteurs</th>

                             <th>Deadline</th>
                             <th>actions</th>
                         </tr>
                         </thead>
                         <tbody>
                         {% for offre in offres %}
                             <tr>

                                 <td>{{ offre.nom }}</td>
                                 <td>{{ offre.description }}</td>
                                 <td>{{ offre.nbClient }}</td>

                                 <td>{{ offre.date ? offre.date|date('Y-m-d') : '' }}</td>
                                 <td>
                                     <a href="{{ path('offre_show', {'offreId': offre.offreId}) }}" class="btn_4" >Afficher </a>
                                     <a href="{{ path('offre_edit', {'offreId': offre.offreId}) }}" class="btn_4" >Modifier</a>
                                 </td>
                             </tr>
                         {% else %}
                             <tr>
                                 <td colspan="5" style="color: darkred">Pas d'offre ! Veuillez cr√©er un </td>
                             </tr>
                         {% endfor %}
                         </tbody>
                     </table>
                     <div class="panel-body">
                     <a href="{{ path('offre_new') }}"  class="btn_1">Ajouter Offre</a>


                     </div></div>
                 <!-- END OVERVIEW -->

             </div>
         </div>
         <!-- END MAIN CONTENT -->
     </div>
 {% endblock %}