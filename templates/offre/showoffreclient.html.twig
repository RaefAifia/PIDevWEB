{% extends 'base.html.twig' %}

{% block title %}
    <title> liste des offres  </title>
{% endblock %}
 {% block content %}
     <section class="breadcrumb breadcrumb_bg">
         <div class="container">
             <div class="row">
                 <div class="col-lg-12">
                     <div class="breadcrumb_iner text-center">
                         <div class="breadcrumb_iner_item">
                             <h2>Détail d'offre</h2>

                         </div>
                     </div>
                 </div>
             </div>
         </div>
     </section>
     <!-- breadcrumb start-->
 {% endblock %}

{% block body %}

    <section>

        <div class="container">

            <div class="row justify-content-center">
                <div class="col-xl-5">
                    <div class="section_tittle text-center">

                    </div>
                </div>
            </div>
            <div class="row align-items-sm-center align-items-lg-stretch">
                <div class="col-md-5 col-lg-5 text-center">
                    <div class="learning_member_text">
                        <div class="row justify-content-center " style="margin-top: 250px">


                            <table class="table">
                                <tbody>

                                <tr>
                                    <th>Nom</th>
                                    <td>{{ offre.nom }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>{{ offre.description }}</td>
                                </tr>

                                <tr>
                                    <th>Date</th>
                                    <td>{{ offre.date ? offre.date|date('Y-m-d') : '' }}</td>
                                </tr>

                                </tbody>
                            </table>
                            <a href="{{ path('offre_indexclient') }}" class="btn_1">Revenir à la liste </a>

                        </div>

                    </div>
                </div>
                <div class="col-md-7 col-lg-7">
                    <div class="img-rounded">
                        <img src="{{ asset ('img/learning_img.jpg') }}" style="margin-top: 25px">
                    </div>
                </div>

            </div>


        </div>

    </section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-5">
                <div class="section_tittle text-center">

                </div>
            </div>
        </div>
    </div>
{% endblock %}
