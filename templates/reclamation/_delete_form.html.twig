<form method="post" action="{{ path('reclamation_delete', {'reclamationId': reclamation.reclamationId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.reclamationId) }}">
    <button class="btn btn-primary" style="margin-top: 20px ; background-color: #343e3d">Supprimer</button>
</form>
