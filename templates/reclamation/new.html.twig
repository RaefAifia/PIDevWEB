{% extends 'base.html.twig' %}


{% block content %}
    <div class="row align-items-sm-center align-items-lg-stretch">
        <div class="col-md-5 col-lg-5 text-center">
            <div class="learning_member_text">
                <div class="row justify-content-center " style="margin-top: 150px">



                </div>

            </div>
        </div>
        <div class="col-md-7 col-lg-7">
            <div class="img-rounded">

            </div>
        </div>

    </div>

{% endblock %}
{% block body %}
    <section class="banner_part">
        <div class="container">

                    <div class="banner_text">



                            <h2>Créer une nouvelle réclamation</h2>

                            {{ form_start(form) }}
                        <table class="table  table-striped">
                            <tr><td> Nom de réclamation : </td>  <td>{{ form_widget(form.reclamationNom) }}{{ form_errors(form.reclamationNom) }}</td></tr>
                            <tr><td> Description : </td>  <td>{{ form_widget(form.description) }}{{ form_errors(form.description) }}</td></tr>
                            <tr><td> Type de produit : </td>  <td>{{ form_widget(form.x) }}{{ form_errors(form.x) }}</td></tr>
                            <tr><td> Concernant : </td>  <td>{{ form_widget(form.concernant) }}{{ form_errors(form.concernant) }}</td></tr>

                        </table>
                            <button class="btn btn-primary ">{{ button_label|default('Save') }}</button>
                            {{ form_end(form) }}
                            <a href="{{ path('reclamation_index') }}">back to list</a>
                        </div>
                    </div>



    </section>
{% endblock %}

