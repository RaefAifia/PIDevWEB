{% extends 'base.html.twig' %}
{% block content %}
{% endblock %}


{% block body %}

    <section class="special_cource padding_top">
        <div class="row justify-content-center">
            <div class="col-xl-5">
                <div class="section_tittle text-center">

                    <h2>Nos artistes</h2>
                </div>
            </div>

        </div>

    </section>

    <section>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-5">
                    <div class="section_tittle text-center">

                    </div>
                </div>
            </div>
            <div class="row">
                {% for user in users %}
                    <div class="col-sm-6 col-lg-4">
                        <div class="single_special_cource">
                            <img src="\images\profil\{{ user.image }}" class="img-fluid" alt="" style="width: 250px; height: 300px; object-fit: cover;">

                            <div class="special_cource_text">


                                <a href="course-details.html">
                                    <h3> {{ user.username}}</h3>
                                </a>


                                <div class="author_info">
                                    <div class="author_img">

                                        <button class="btn btn-primary"  style="margin-bottom: 10px " onclick="location.href='{{ path('user_show', {'userId': user.userId}) }}'">Afficher</button>

                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                {% endfor %}


            </div>
        </div>

    </section>
</section>
{% endblock %}
