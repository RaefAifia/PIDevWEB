{% extends 'base.html.twig' %}

{% block content %}
    <div class="row align-items-sm-center align-items-lg-stretch">
        <div class="col-md-5 col-lg-5 text-center">
            <div class="learning_member_text">
                <div class="row justify-content-center " style="margin-top: 150px">



                </div>

            </div>
        </div>
        <div class="col-md-7 col-lg-7">
            <div class="img-rounded">

            </div>
        </div>

    </div>

{% endblock %}

{% block body %}
<section class="banner_part">

        <div class="row justify-content-center">
            <div class="container">
                <div class="main-body">

                    <!-- Breadcrumb -->

                    <!-- /Breadcrumb -->

                    <div class="row gutters-sm">
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">
                                        <img src="\images\profil\{{ user.image }}"  style="width: 250px; height: 300px; object-fit: cover;" alt="" >
                                        <div class="mt-3">
                                            <h4>{{ user.username }}</h4>
                                            <p class="text-secondary mb-1">Nombre de followers</p>
                                            <p class="text-muted font-size-sm">{{ relationx }}</p>
                                            {% if(user.userId != app.user.userId) %}
                                            {% if relation==null %}

                                            <button class="btn btn-primary" onclick="location.href='{{ path('user_sabonner' , {'userId': user.userId}) }}'">S'abonner</button>
                                            {% else %}
                                            <button class="btn btn-primary" onclick="location.href='{{ path('user_sabonner' , {'userId': user.userId}) }}'">Se désabonner</button>
                                            {% endif%}
                                            {% else %}
                                                <button class="btn btn-primary" onclick="location.href='{{ path('user_edit' , {'userId': user.userId}) }}'">Modifier profil</button>

                                            {% endif%}


                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% if(user.userId == app.user.userId) %}
                            <div class="card mt-3">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                        <h6 class="mb-0"></svg> <a href="{{ path('reclamation_index') }}">Mes réclamations</a></h6>

                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                        <h6 class="mb-0"></svg>Mes favoris</h6>

                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                        <h6 class="mb-0"></svg>Mes Oeuvres</h6>

                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                        <h6 class="mb-0"></svg>Mes formations</h6>

                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                        <h6 class="mb-0"></svg>Mes évenements</h6>

                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                        <h6 class="mb-0"></svg>Mes offres</h6>

                                    </li>
                                </ul>
                            </div>
                            {% endif %}
                        </div>
                        <div class="col-md-8">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Nom</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            {{ user.nom }}
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Prenom</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            {{ user.prenom }}
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Email</h6>
                                        </div>
                                        <div class="col-sm-5 text-secondary">
                                            {{ user.email }}
                                        </div>
                                        {% if(user.userId == app.user.userId) %}
                                        {% if user.mailconfirme==0 %}
                                        <div class="col">
                                            <a href="{{ path('contact',  {'userId': user.userId} )}}">Confirmer mail</a>
                                        </div>
                                            {% endif %}
                                        {% endif %}
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Numero téléphone</h6>
                                        </div>
                                        <div class="col-sm-5 text-secondary">
                                            {{user.numTel }}
                                        </div>

                                        {% if(user.userId == app.user.userId) %}
                                        {% if user.numconfirme==0 %}
                                        <div class="col">
                                            <a href="{{ path('contactSMS',  {'userId': user.userId} )}}">Confirmer Numero téléphone</a>
                                        </div>
                                            {% endif %}
                                        {% endif%}


                                    </div>


                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Address</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            {{ user.adresse }}
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Bio</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            {{ user.bio }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row gutters-sm">


                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <script src="http://code.jquery.com/jquery-1.10.2.min.js"></script>
            <script src="http://netdna.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
            <script type="text/javascript">

            </script>
        </div>
    </div>
</section>
{% endblock %}
